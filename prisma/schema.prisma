generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model company {
    companyid   Int         @id @default(autoincrement())
    name        String
    cnpj        String      @unique

    users user[]
}

model user {
    userid      Int         @id @default(autoincrement())
    email       String      @unique
    password    String
    name        String
    companyid   Int
    company     company @relation(fields: [companyid], references: [companyid])
}