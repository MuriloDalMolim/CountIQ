generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model company {
    companyid       Int         @id @default(autoincrement())
    name            String
    cnpj            String      @unique
    inactiveflag    String      @default("F")

    users user[]
    products product[]
    lists list[]
}

model user {
    userid          Int         @id @default(autoincrement())
    name            String
    email           String      @unique
    password        String
    inactiveflag    String      @default("F") @db.Char(1)
    adminflag       String      @default("F") @db.Char(1)
    companyid       Int
    company         company     @relation(fields: [companyid], references: [companyid])

    list_count      list_count[]
}

model product {
    productid       Int         @id @default(autoincrement())
    description     String
    barcode         String      
    inactiveflag    String      @default("F") @db.Char(1)
    companyid       Int
    company         company     @relation(fields: [companyid], references: [companyid])

    @@unique([companyid, barcode])
    product_list    product_list[]
}

model list {
    listid          Int         @id @default(autoincrement())
    description     String
    companyid       Int
    inactiveflag    String      @default("F") @db.Char(1)
    company         company     @relation(fields: [companyid], references: [companyid])

    product_list    product_list[]
    list_count      list_count[]
}

model product_list {
    listid          Int    
    productid       Int
    list            list        @relation(fields: [listid], references: [listid])
    product         product     @relation(fields: [productid], references: [productid])

    @@id([listid,productid])
}

model list_count {
    listcountid     Int         @id @default(autoincrement())
    status          String      @default("Aberta")
    listid          Int
    userid          Int
    list            list        @relation(fields: [listid], references: [listid])
    user            user        @relation(fields: [userid], references: [userid])
}